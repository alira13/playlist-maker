<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_in_string_image_iv"
        android:layout_width="@dimen/search_track_image_size"
        android:layout_height="@dimen/search_track_image_size"
        android:layout_marginVertical="@dimen/search_margin_8"
        tools:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/search_margin_8"
        android:layout_weight="1"
        android:gravity="start|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_in_string_name_tv"
            style="@style/ListItemEditTextRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Имя плейлиста" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/playlist_in_string_track_num_tv"
                style="@style/ListItemEditTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>