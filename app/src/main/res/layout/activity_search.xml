<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SecondaryScreenLayoutStyle"
    tools:context=".SearchActivity">

    <LinearLayout
        style="@style/HeaderStyle"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/arrow_back_button"
            style="@style/PanelHeaderButton"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/PanelHeaderText"
            android:text="@string/search_label" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/input_edit_text"
            style="@style/SearchEditText"
            android:autofillHints="name"
            android:hint="@string/search_label"
            android:imeOptions="actionDone"
            android:singleLine="true">
        </EditText>

        <ImageView
            android:id="@+id/search_button"
            style="@style/IconInSearchEditText"
            android:layout_gravity="start|center"
            android:layout_marginStart="12dp"
            android:src="@drawable/search">
        </ImageView>

        <ImageView
            android:id="@+id/clear_button"
            style="@style/IconInSearchEditText"
            android:layout_gravity="end|center"
            android:layout_marginEnd="12dp"
            android:src="@drawable/close"
            android:visibility="gone">
        </ImageView>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/track_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_no_internet_problem_image"
            style="@style/search_no_internet_problem_image"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/search_no_internet_problem_text"
            style="@style/search_problem_text"
            tools:text="@string/no_internet_connection"
            android:visibility="gone"/>

        <Button
            android:id="@+id/retry_search_button"
            style="@style/search_no_internet_problem_retry_button"
            android:visibility="gone">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_list_problem_image"
            style="@style/search_empty_list_problem_image"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/empty_list_problem_text"
            style="@style/search_problem_text"
            tools:text="@string/tracks_not_found"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>