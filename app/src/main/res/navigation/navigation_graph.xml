<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.presentation.screenSearch.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.presentation.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.example.playlistmaker.presentation.screenMedia.MediaFragment"
        android:label="fragment_media"
        tools:layout="@layout/fragment_media" >
        <action
            android:id="@+id/action_mediaFragment_to_createPlaylistFragment"
            app:destination="@id/createPlaylistFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_playlistInfoFragment"
            app:destination="@id/playlistInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPlaylistFragment"
        android:name="com.example.playlistmaker.presentation.screenNewPlaylist.NewPlaylistFragment"
        android:label="fragment_create_playlist"
        tools:layout="@layout/fragment_new_playlist" />
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.playlistmaker.presentation.screenPlayer.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" >
        <action
            android:id="@+id/action_playerFragment_to_createPlaylistFragment"
            app:destination="@id/createPlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/mediaPlaylistsFragment"
        android:name="com.example.playlistmaker.presentation.screenMedia.playlists.MediaPlaylistsFragment"
        android:label="fragment_media_playlists"
        tools:layout="@layout/fragment_media_playlists" />
    <fragment
        android:id="@+id/mediaFavoritesFragment"
        android:name="com.example.playlistmaker.presentation.screenMedia.favorites.MediaFavoritesFragment"
        android:label="fragment_media_favorites"
        tools:layout="@layout/fragment_media_favorites" />
    <fragment
        android:id="@+id/playlistInfoFragment"
        android:name="com.example.playlistmaker.presentation.screenPlaylistInfo.PlaylistInfoFragment"
        android:label="PlaylistInfoFragment" >
        <action
            android:id="@+id/action_playlistInfoFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_playlistInfoFragment_to_editPlaylistFragment"
            app:destination="@id/editPlaylistFragment" />
     </fragment>
    <fragment
        android:id="@+id/editPlaylistFragment"
        android:name="com.example.playlistmaker.presentation.screenEditPlaylist.EditPlaylistFragment"
        android:label="fragment_edit_playlist"
        tools:layout="@layout/fragment_edit_playlist" />
</navigation>