<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="ButtonBig">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/button_marginTop</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/big_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/YP_white</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PanelHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/icon_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PanelHeaderButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/YP_black</item>
        <item name="android:tint">@color/YP_white</item>
    </style>

    <style name="SettingsListText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsListButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/YP_black</item>
        <item name="android:tint">@color/YP_white</item>
    </style>

    <style name="SettingsToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:thumbTint">@color/YP_blue</item>
        <item name="android:trackTint">@color/YP_light_blue</item>
        <item name="android:checked">true</item>
    </style>

    <style name="SettingsFrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/string_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SecondaryScreenLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/YP_black</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/YP_black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>
</resources>